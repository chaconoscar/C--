/* 1. write a function "tripleletter" which takes a character c and displays the character three times


void tripleletter (char c){
     <write your statements here>
}

*/

#include <iostream>

using namespace std;

void tripleletter(char x)
{
    cout << x << x << x << endl;
}

int main()
{

    tripleletter('c');

    return 0;
}

