/* 3. write a program that takes a grade (between 0 and 100) and give out the letter grade 
(90 and above is A, otherwise, 80 and over is B, otherwise, 70 and over is C, otherwise F)
*/


#include <iostream>
#include <string>

using namespace std;

int main()
{
int grade;

cout << "Enter your grade: ";
cin >> grade;

if (grade >= 90)
cout << "You got an A";
else if (grade >= 80 && grade < 90)
cout << "You got a B";
else if (grade >= 70 && grade < 80)
cout << "You got a C";
else if (grade >= 0 && grade < 70)
cout << "You got a F";

return 0;
}
