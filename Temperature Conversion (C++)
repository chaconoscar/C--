/* 3. write a function c_to_f that takes in the temperature in Celsius as a parameter and returns the Fahrenheit value


double c_to_f (double c){
     <write your statements here>
}

*/

#include <iostream>
#include <cmath>

using namespace std;

double c_to_f(double c)
{
    return (c * 9 / 5) + 32;
}
int main()
{

    double c;
    cout << "What is Celsius?" << endl;
    cin >> c;
    double f = c_to_f(c);
    cout << c << " degrees Celsius = ";
    cout << f << " degrees Fahrenheit";

    return 0;
}
